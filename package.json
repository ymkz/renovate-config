{
  "name": "@ymkz/renovate-config",
  "description": "ymkz's renovate config",
  "license": "MIT",
  "author": "ymkz <ymkzly@gmail.com> (https://github.com/ymkz)",
  "homepage": "https://github.com/ymkz/renovate-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/ymkz/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/ymkz/renovate-config/issues"
  },
  "version": "1.0.0",
  "files": [],
  "scripts": {
    "release": "semantic-release",
    "validate": "renovate-config-validator"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@secretlint/secretlint-rule-preset-recommend": "^0.7.2",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@ymkz/prettier-config": "^1.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "prettier-package-json": "^2.1.3",
    "renovate": "^19.154.2",
    "secretlint": "^0.8.0",
    "semantic-release": "^17.0.4",
    "yarnhook": "^0.4.3"
  },
  "keywords": [
    "config",
    "renovate",
    "ymkz"
  ],
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        ":autodetectPinVersions",
        ":combinePatchMinorReleases",
        ":ignoreModulesAndTests",
        ":ignoreUnstable",
        ":label(dependencies)",
        ":prConcurrentLimit10",
        ":prNotPending",
        ":semanticPrefixFixDepsChoreOthers",
        ":timezone(Asia/Tokyo)"
      ],
      "npm": {
        "extends": [
          ":automergeMinor",
          ":noUnscheduledUpdates",
          ":separateMajorReleases",
          ":unpublishSafe",
          "group:monorepos",
          "group:recommended",
          "helpers:disableTypesNodeMajor"
        ],
        "schedule": [
          "after 9pm",
          "before 9am"
        ],
        "rangeStrategy": "bump",
        "lockFileMaintenance": {
          "enabled": true,
          "schedule": [
            "before 3am on the first day of the month"
          ]
        }
      }
    }
  }
}
