{
  "name": "@ymkz/renovate-config",
  "description": "ymkz's renovate config",
  "license": "MIT",
  "author": "ymkz <ymkzly@gmail.com> (https://github.com/ymkz)",
  "homepage": "https://github.com/ymkz/renovate-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/ymkz/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/ymkz/renovate-config/issues"
  },
  "version": "1.1.0",
  "scripts": {
    "validate": "renovate-config-validator"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "renovate": "^20.2.3",
    "yarnhook": "^0.4.3"
  },
  "keywords": [
    "config",
    "renovate",
    "ymkz"
  ],
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "group:monorepos",
        "group:recommended",
        ":label(dependencies)",
        ":semanticCommitTypeAll(chore)"
      ],
      "major": {
        "groupName": "all major dependencies"
      },
      "minor": {
        "automerge": true,
        "groupName": "all minor dependencies"
      },
      "patch": {
        "automerge": true,
        "groupName": "all patch dependencies"
      },
      "rangeStrategy": "bump",
      "separateMinorPatch": true
    }
  }
}
